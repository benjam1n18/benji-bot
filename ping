    public class intro : ModuleBase<SocketCommandContext>

    {
        [Command("intro")]
        public async Task PingAsync()
        {
            await ReplyAsync("Hello Discord! i am Benji-bot. i've recently been created by @benjam1n#1107. If you have any feed back or tips you can just send him a message. And i hope i can help. sincerely Benji-Bot");
        }

